# MT5/MT4 Trading HTTP Server Environment Variables
# Copy this file to .env and fill in your actual values

# Trading Platform Selection
TRADING_PLATFORM=mt5  # Options: mt5, mt4

# MT5 Configuration (when TRADING_PLATFORM=mt5)
# MT5_TERMINAL_PATH=""
# MT5_TIMEOUT_CONNECT=30
# MT5_TIMEOUT_TRADE=10

# MT4 Configuration (when TRADING_PLATFORM=mt4)
# MT4_TERMINAL_PATH=""
# MT4_BRIDGE_PORT=7788
# MT4_EA_NAME="MT4Bridge"
# MT4_TIMEOUT_CONNECT=30
# MT4_TIMEOUT_TRADE=10

# API Security (optional)
# API_KEY=your_api_key_here

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=5000
DEBUG_MODE=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/mt5_server.log
